@{
    ViewBag.Title = "taoMoi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <form action="/Admin/XLThemMoi" method="post">
        <div class="row">
            <div class="col">
                <label for="" style="font-weight: bold;">Mã thiết bị</label>
                <input type="text" name="MATHIETBI" class="form-control" />
            </div>
            <div class="col" style="font-weight: bold;">
                <label for="">Tên thiết bị</label>
                <input type="text" name="TENTHIETBI" class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label for="" style="font-weight: bold;">Đơn giá</label>
                <input type="text" name="DONGIA" class="form-control">
            </div>
            <div class="col">
                <label for="" style="font-weight: bold;">Hình ảnh</label>
                <input type="file" name="HINHANH">
            </div>
        </div>
        <div class="mt-3">
            <p>
                <input type="submit" value="Thêm" />
            </p>
        </div>
    </form>
</div>