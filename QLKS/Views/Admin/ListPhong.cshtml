@model IEnumerable<QLKS.Models.PHONG>

@{
    ViewBag.Title = "ListPhong";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }
</style>
<h2 class="text-dark text-center">Danh Sách Phòng</h2>

<p>
    <a class="btn btn-info mb-2" href="/Admin/ThemPhong">Thêm phòng</a>
</p>
<table>
    <tr>
        <th>
            Mã Phòng
        </th>
        <th>
            Số Điện Thoại Bàn
        </th>
        <th>
            Hình Ảnh
        </th>
        <th>
            Trạng Thái
        </th>
        <th>
            Mã Loại
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MAPHONG)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDTBAN)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.HINHANH)*@
            <img src="@Url.Content("~/images/Phong/" + item.HINHANH)" alt="#">
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TRANGTHAI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MALOAI)
        </td>
        <td>
            <a class="btn btn-info mb-2" href="~/Admin/SuaPhong/@item.MAPHONG">Cập nhật </a>
            <a class="btn btn-info mb-2" href="~/Admin/XoaPhong/@item.MAPHONG"> Xóa </a>
        </td>
    </tr>
}

</table>
