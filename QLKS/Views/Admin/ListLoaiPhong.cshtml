@model IEnumerable<QLKS.Models.LOAIPHONG>

@{
    ViewBag.Title = "ListLoaiPhong";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }
</style>
<h2 class ="text-dark text-center">Danh Sách Loại Phòng</h2>

<p>
    <a class="btn btn-info text-light" href="~/Admin/ThemLoaiPhong">Thêm loại phòng</a>
</p>
<table>
    <tr>
        <th>
            Mã Loại Phòng
        </th>
        <th>
            Đơn Giá
        </th>
        <th>
            Số Người Tối Đa
        </th>
        <th>
            Hình Ảnh
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MALOAI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DONGIA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SONGUOIMAX)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.HINHANH)*@
            <img src="@Url.Content("~/images/LoaiPhong/" + item.HINHANH)" alt="#">
        </td>
        <td>
            <a class="btn btn-info mb-2" href="~/Admin/SuaLoaiPhong/@item.MALOAI">Cập nhật </a>
            <a class="btn btn-info mb-2" href="~/Admin/XoaLoaiPhong/@item.MALOAI"> Xóa </a>

        </td>
    </tr>
}

</table>
